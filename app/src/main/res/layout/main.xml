<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center">

    <TextView
        android:id="@+id/mouseStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mouse Status: Unknown"
        android:textSize="18sp"
        android:padding="10dp" />

    <Button
        android:id="@+id/checkMouseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Mouse Status"
        android:padding="10dp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/startCursorBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Cursor"
        android:padding="10dp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/stopCursorBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Cursor"
        android:padding="10dp"
        android:layout_marginTop="10dp" />

</LinearLayout>
